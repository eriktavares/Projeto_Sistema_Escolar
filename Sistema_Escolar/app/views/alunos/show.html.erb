<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @aluno.nome %>
</p>

<p>
  <strong>Turma:</strong>
  <%= @aluno.turma.nome%>
</p>


<%= link_to 'Editar', edit_aluno_path(@aluno) %> |
<%= link_to 'Alunos', alunos_path %>|
<%= link_to 'Turmas', turmas_path %>

<div>
<%if @aluno.provas.count>=4 %>
<tr>Adicionar Provas</tr>
<%else%>

<%= link_to "Adicionar Prova", :controller => "provas",
                                 :action => "new",
                                :aluno => @aluno%>
<%end%>
</div>




<p>
<th>Provas:</th>
</p>
<tbody>
<% @aluno.provas.each do |prova| %>
 <tr> 
	<br/><td><%= prova.nota %></td>
	
</tr>
 <% end %>

 </tbody>

<p>
<strong>Media: <%= @aluno.provas.average(:nota)%></strong>
</p

<%if @aluno.provas.count==4 %>
<%if @aluno.provas.average(:nota)>=6 %>
<p><strong>APROVADO</strong></p>
<%else%>
<p><strong>REPROVADO</strong></p>

<%end%>
<%end%>

